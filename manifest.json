{
    "manifest_version": 2,
    "name": "Image Interceptor",
    "short_name": "Image Interceptor",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.googleusercontent.com/",
        "https://mail.google.com/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}
